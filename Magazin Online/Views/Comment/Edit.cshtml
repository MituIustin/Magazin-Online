@model Magazin_Online.Models.Comment

<h2 class="text-center mt-5">Editare Comentariu</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Comment", method: FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.HiddenFor(m => m.CommentId)

                    @Html.LabelFor(m => m.Content, "Continut comentariu")
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <!-- Add other properties as needed -->
                </div>

                <br />

                <button class="btn btn-primary" type="submit">Salveaza modificarile</button>
            }
        </div>
    </div>
</div>
