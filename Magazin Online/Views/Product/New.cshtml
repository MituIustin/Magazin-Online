@model Magazin_Online.Models.Product


<h2 class="text-center mt-5">Adaugare produs</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Product",
            method: FormMethod.Post,new { enctype = "multipart/form-data" }))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Title", "Nume produs")
                <br />
                @Html.TextBox("Title", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Description", "Descriere produs")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })

                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                <br />


                @Html.Label("Photo", "Imagine produs")
                <br />
                <input type="file" name="file" class="form-control" />
                <br />


                <br />
                @Html.Label("Price","Pret produs")
                <br />
                @Html.TextArea("Price",null,new{@class="form-control"})

                <label>Selectati categoria</label>

                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
                "Selectati categoria", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
                <br />

                <br />


                

                
                <br />
                <br />
                    
                <button class="btn btn-success" type="submit">Adauga articol</button>
            }

        </div>
    </div>
</div>








