@model Magazin_Online.Models.Category


<h2 class="text-center mt-5">Adaugare Categorie</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Category",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

              
                <br />

                @Html.Label("Name", "Nume categorie")
                <br />
                @Html.TextBox("Name", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-success" type="submit">Adauga articol</button>

            }

        </div>
    </div>
</div>








