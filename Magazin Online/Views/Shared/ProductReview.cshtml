@model Magazin_Online.Models.Product


<head>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>



<h2>Review-uri(@ViewBag.count):</h2>

<div class="row">
    @foreach (Magazin_Online.Models.Review review in ViewBag.reviews)
    {
        <div class="col-md-3 mb-4">
            <div class="card" style="max-width: 300px">
                @Html.Partial("ReviewInfo", review)
            </div>
        </div>
    }
    @if (Model.Reviews.Count==0)
    {
        <h2 class="text-center">Nu exista review-uri</h2>
    }


</div>




<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link"
                   href="/Product/Show/@Model.ProductId?section=review&page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li class="page-item">
                    <a class="page-link"
                   href="/Product/Show/@Model.ProductId?section=review&page=@(i)">@(i)</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link"
                   href="/Product/Show/@Model.ProductId?section=review&page=@(ViewBag.lastPage)" aria-
                   label="Next">

                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
