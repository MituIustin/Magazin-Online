@model Magazin_Online.Models.Product

<div class="card-body d-flex align-items-center">

    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Photo)" alt="Product Photo" style="max-width: 450px; max-height: 450px; margin-right: 20px;" />

    <div style="flex-grow: 1;">
        <h5 class="card-title py-3 px-3 rounded-3" style="text-align: right; font-size: 24px;">@Model.Title</h5>

        <div class="p-3 border-1 border-top" style="text-align:right">
            <small class="text-muted" style="text-align: right; font-size: 16px;">Categorie: @Model.Category?.Name </small>
        </div>

        <div class="p-3" style="text-align: right; font-size: 20px;">
            <div><i class="bi bi-person"></i> @Model.Price Lei</div>
        </div>

        <div class="rating" style="text-align: right; font-size: 24px;">
            @{
                if (Model.rating == null)
                {
                    Model.rating = 0;
                }
                int numStars = (int)Model.rating;

                for (int i = 0; i < numStars; i++)
                {
                    <span class="fa fa-star checked"></span>
                }

                for (int i = numStars; i < 5; i++)
                {
                    <span class="fa fa-star"></span>
                }
            }
            <p>@Model.rating</p>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .checked {
            color: orange;
        }
    </style>

</div>
