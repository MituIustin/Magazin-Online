<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Magazin_Online </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Magazin_Online.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="d-flex justify-content-center align-items-center p-3">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Blesto</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin") || User.IsInRole("Contributor"))
                        {
                            <li class="custom-btn">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="New">Adaugare produs</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="custom-btn">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Request" asp-action="Index">Request-uri</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="custom-btn">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Vezi categorii</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Contributor") || User.IsInRole("User"))
                        {
                            <li class="custom-btn">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Basket" asp-action="Index">Cosul meu</a>
                            </li>
                        }

                        <partial name="_LoginPartial" />
                    </ul>
                        
                </div>
            </div>
        </nav>
    </header>

    <style>

        .custom-btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            background-color: white;
            color: darkgreen;
        }

            .custom-btn:hover {
                background-color: #ddd;
            }
    </style>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
