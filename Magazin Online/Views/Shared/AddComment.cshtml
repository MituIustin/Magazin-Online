@model Magazin_Online.Models.Comment


<h4>Adauga comentariu</h4>

<form asp-action="New" asp-controller="Comment" method="post">
    <input type="hidden" asp-for="ProductId"/>

    <div class="form-group">
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Adauga comentariu</button>
    </div>
</form>


